  "main": "index.js",
  "scripts": {
    "build": "npx webpack --mode production",
    "serve": "npx webpack serve --open --mode development",
    "dev": "npx ts-node-dev --respawn",
    "watch:prod": "npx webpack --watch --mode production",
    "watch:dev": "npx webpack --watch --mode development",
    "test": "jest",
    "test:watch": "jest --watch",
    "prettier:watch": "onchange \"**/*\" -- prettier --write --ignore-unknown {{changed}}",
    "format": "onchange \"**/*\" -e \"**/*.ts\" \"**/*.js\" -- prettier --write --ignore-unknown {{changed}}",
    "lint-and-format": "onchange \"**/*.ts\" \"**/*.js\" -- eslint --fix {{changed}} && prettier --write --ignore-unknown {{changed}}"
  },
